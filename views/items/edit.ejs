<div class="edititem">
    <nav class="navbar">
        <a href="/lists">Home</a>
        <ul>
            <li>
                <a href="/stores">Create New Item</a>
            </li>
            <li>
                <a href="/">Logout</a>
            </li>
        </ul>
    </nav>
    <h1> Shoppy Cart </h1>
    <form action="/items/<%= item._id %>?_method=PUT" method="POST">
        Item Name: <input type="text" name="name" value="<%= item.name %>" required /><br />
        Quantity: <input type="number" name="quantity" value="<%= item.quantity %>" /><br />
        Unit of measure: <input type="unit" name="unit" value="<%= item.unit %>" /><br />
        Additional Info: <input type="notes" name="notes" value="<%= item.notes %>" /><br />
        Date Needed By: <input type="date" name="date" value="<%= item.date %>" /><br />
      <input type="submit" value="Submit Changes" />
    </form>
</div>